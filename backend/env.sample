# Sample production environment variables
PORT=8080
# Database DSN for docker-compose (use service name 'db' as host)
DATABASE_DSN=host=db user=postgres password=postgres dbname=Civicissue port=5432 sslmode=disable
# JWT secret (REPLACE in real deployments)
JWT_SECRET=CHANGE_ME_SUPER_SECRET
# Allowed CORS origin (set to your deployed frontend URL)
ALLOWED_ORIGIN=https://your-frontend.example.com
# Optional Redis (leave blank to disable)
REDIS_ADDR=
REDIS_PASSWORD=
# Disable auth ONLY in local dev
DISABLE_AUTH=false
# ML APIs (leave blank to disable features gracefully)
ML_API_URL=
IMAGE_CLASSIFICATION_API_URL=
# Frontend directory inside container
FRONTEND_DIR=/app/frontend
